// Assignment 2 written by Jonathan Taylor
/*  Project 2 -- A program that takes the input file "romanstable.txt" and outputs a 
    table of decimal numbers and their roman numeral equivalent from 1 to 1000.
*/

#include <stdio.h>

int main ()
{
	int i=1;
	int romanNum(int);
	
	for(i;i<=1000;i++)
	{
		printf("%d ",i);
		romanNum(i);
		printf("\n");
	}
	
	return 0;
}

int romanNum(int n)
{
	while(n/1000>0)
	{
		printf("M");
		n=n-1000;
	}

	while(n/900>0)
	{
		printf("CM");
		n=n-900;
	}
	
		while(n/500>0)
	{
		printf("D");
		n=n-500;
	}	
	
		while(n/400>0)
	{
		printf("CD");
		n=n-400;
	}
	
		while(n/100>0)
	{
		printf("C");
		n=n-100;
	}
	
		while(n/90>0)
	{
		printf("XC");
		n=n-90;
	}
	
		while(n/50>0)
	{
		printf("L");
		n=n-50;
	}
	
	while(n/40>0)
	{
		printf("XL");
		n=n-40;
	}
	
	while(n/10>0)
	{
		printf("X");
		n=n-10;
	}
	
	while(n/9>0)
	{
		printf("IX");
		n=n-9;
	}
	
	while(n/5>0)
	{
		printf("V");
		n=n-5;
	}
	
	while(n/1>0)
	{
		if(n/1==4)
		{
			printf("IV");
			break;
		}
		else printf("I");
		n=n-1;
	}
	
	return n;
}
